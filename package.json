{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "yarn",
    "watch": "lerna run watch --stream --parallel",
    "build": "lerna run build --stream --parallel",
    "lint": "tslint -c tslint.json -p ./tsconfig.base.json && standard",
    "lint:fix": "tslint -c tslint.json -p ./tsconfig.base.json --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ykfe/ssr.git"
  },
  "author": "zhangyuang",
  "license": "MIT",
  "pre-commit": [
    "lint"
  ],
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/dist/",
      "**/run/",
      "**/log/",
      "**/cjs/",
      "**/esm/",
      "**/node_modules/**"
    ],
    "global": [
      "__isBrowser__",
      "location",
      "window",
      "jest"
    ]
  },
  "bugs": {
    "url": "https://github.com/ykfe/ssr/issues"
  },
  "homepage": "https://github.com/ykfe/ssr#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "lerna": "^3.20.2",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.2",
    "standard": "^13.0.1",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.7.2"
  }
}
