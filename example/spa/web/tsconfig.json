// only used for ide prompt 
{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "paths": {
      "@": ["./"]
    }
  },
  "exclude": [
   "pages"
  ]
}

